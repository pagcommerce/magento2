<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Pagcommerce\Payment\Logger\Handler\System">
        <arguments>
            <argument name="filesystem" xsi:type="object">Magento\Framework\Filesystem\Driver\File</argument>
        </arguments>
    </type>
    <type name="Pagcommerce\Payment\Logger\Handler">
        <arguments>
            <argument name="filesystem" xsi:type="object">Magento\Framework\Filesystem\Driver\File</argument>
        </arguments>
    </type>
    <type name="Pagcommerce\Payment\Logger\Logger">
        <arguments>
            <argument name="name" xsi:type="string">pagcommmerce</argument>
            <argument name="handlers" xsi:type="array">
                <item name="system" xsi:type="object">Pagcommerce\Payment\Logger\Handler\System</item>
            </argument>
        </arguments>
    </type>



    <!-- Payment Method Facade configuration -->
    <virtualType name="PagcommercePaymentFacade" type="Magento\Payment\Model\Method\Adapter">
        <arguments>
            <argument name="code" xsi:type="const">\Pagcommerce\Payment\Model\Ui\ConfigProvider::CODE</argument>
            <argument name="formBlockType" xsi:type="string">Magento\Payment\Block\Form</argument>
            <argument name="infoBlockType" xsi:type="string">Pagcommerce\Payment\Block\Info\Cc</argument>
            <argument name="valueHandlerPool" xsi:type="object">PagcommercePaymentValueHandlerPool</argument>
            <argument name="commandPool" xsi:type="object">PagcommercePaymentCommandPool</argument>
        </arguments>
    </virtualType>

    <!-- Configuration reader -->
    <virtualType name="PagcommercePaymentConfig" type="Magento\Payment\Gateway\Config\Config">
        <arguments>
            <argument name="methodCode" xsi:type="const">\Pagcommerce\Payment\Model\Ui\ConfigProvider::CODE</argument>
        </arguments>
    </virtualType>

    <!-- Logger, initialized with PagcommercePaymentConfig -->
    <virtualType name="PagcommercePaymentLogger" type="Magento\Payment\Model\Method\Logger">
        <arguments>
            <argument name="config" xsi:type="object">PagcommercePaymentConfig</argument>
        </arguments>
    </virtualType>

    <type name="Pagcommerce\Payment\Gateway\Http\Client\ClientMock">
        <arguments>
            <argument name="logger" xsi:type="object">PagcommercePaymentLogger</argument>
        </arguments>
    </type>

    <!-- Commands infrastructure -->
    <virtualType name="PagcommercePaymentCommandPool" type="Magento\Payment\Gateway\Command\CommandPool">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="authorize" xsi:type="string">PagcommercePaymentAuthorizeCommand</item>
                <item name="capture" xsi:type="string">PagcommercePaymentCaptureCommand</item>
                <item name="void" xsi:type="string">PagcommercePaymentVoidCommand</item>
            </argument>
        </arguments>
    </virtualType>

    <!-- Authorize command -->
    <virtualType name="PagcommercePaymentAuthorizeCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">PagcommercePaymentAuthorizationRequest</argument>
            <argument name="handler" xsi:type="object">PagcommercePaymentResponseHandlerComposite</argument>
            <argument name="transferFactory" xsi:type="object">Pagcommerce\Payment\Gateway\Http\TransferFactory</argument>
            <argument name="client" xsi:type="object">Pagcommerce\Payment\Gateway\Http\Client\ClientMock</argument>
        </arguments>
    </virtualType>

    <!-- Authorization Request -->
    <virtualType name="PagcommercePaymentAuthorizationRequest" type="Magento\Payment\Gateway\Request\BuilderComposite">
        <arguments>
            <argument name="builders" xsi:type="array">
                <item name="transaction" xsi:type="string">Pagcommerce\Payment\Gateway\Request\AuthorizationRequest</item>
                <item name="mockData" xsi:type="string">Pagcommerce\Payment\Gateway\Request\MockDataRequest</item>
            </argument>
        </arguments>
    </virtualType>

    <type name="Pagcommerce\Payment\Gateway\Request\AuthorizationRequest">
        <arguments>
            <argument name="config" xsi:type="object">PagcommercePaymentConfig</argument>
        </arguments>
    </type>

    <!-- Capture command -->
    <virtualType name="PagcommercePaymentCaptureCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">Pagcommerce\Payment\Gateway\Request\CaptureRequest</argument>
            <argument name="handler" xsi:type="object">Pagcommerce\Payment\Gateway\Response\TxnIdHandler</argument>
            <argument name="transferFactory" xsi:type="object">Pagcommerce\Payment\Gateway\Http\TransferFactory</argument>
            <argument name="validator" xsi:type="object">Pagcommerce\Payment\Gateway\Validator\ResponseCodeValidator</argument>
            <argument name="client" xsi:type="object">Pagcommerce\Payment\Gateway\Http\Client\ClientMock</argument>
        </arguments>
    </virtualType>

    <!-- Capture Request -->
    <type name="Pagcommerce\Payment\Gateway\Request\CaptureRequest">
        <arguments>
            <argument name="config" xsi:type="object">PagcommercePaymentConfig</argument>
        </arguments>
    </type>

    <!-- Void command -->
    <virtualType name="PagcommercePaymentVoidCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">Pagcommerce\Payment\Gateway\Request\VoidRequest</argument>
            <argument name="handler" xsi:type="object">Pagcommerce\Payment\Gateway\Response\TxnIdHandler</argument>
            <argument name="transferFactory" xsi:type="object">Pagcommerce\Payment\Gateway\Http\TransferFactory</argument>
            <argument name="validator" xsi:type="object">Pagcommerce\Payment\Gateway\Validator\ResponseCodeValidator</argument>
            <argument name="client" xsi:type="object">Pagcommerce\Payment\Gateway\Http\Client\ClientMock</argument>
        </arguments>
    </virtualType>

    <!-- Void Request -->
    <type name="Pagcommerce\Payment\Gateway\Request\VoidRequest">
        <arguments>
            <argument name="config" xsi:type="object">PagcommercePaymentConfig</argument>
        </arguments>
    </type>

    <!-- Response handlers -->
    <virtualType name="PagcommercePaymentResponseHandlerComposite" type="Magento\Payment\Gateway\Response\HandlerChain">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="txnid" xsi:type="string">Pagcommerce\Payment\Gateway\Response\TxnIdHandler</item>
                <item name="fraud" xsi:type="string">Pagcommerce\Payment\Gateway\Response\FraudHandler</item>
            </argument>
        </arguments>
    </virtualType>


    <!-- Value handlers infrastructure -->
    <virtualType name="PagcommercePaymentValueHandlerPool" type="Magento\Payment\Gateway\Config\ValueHandlerPool">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="default" xsi:type="string">PagcommercePaymentConfigValueHandler</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="PagcommercePaymentConfigValueHandler" type="Magento\Payment\Gateway\Config\ConfigValueHandler">
        <arguments>
            <argument name="configInterface" xsi:type="object">PagcommercePaymentConfig</argument>
        </arguments>
    </virtualType>

    <type name="Pagcommerce\Payment\Block\Info\Cc">
        <arguments>
            <argument name="config" xsi:type="object">PagcommercePaymentConfig</argument>
        </arguments>
    </type>
</config>
